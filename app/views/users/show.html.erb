<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <span>
    <%= render partial: 'friendships/new', locals: { friend_id: @user.id } %>
  </span>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
